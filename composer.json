{
    "name": "jhoffland/natec-php-sdk",
    "description": "Natec Klantportaal API Client Library for PHP",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/jhoffland/natec-php-sdk",
    "autoload": {
        "psr-4": {
            "NatecSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NatecSdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Joep Hoffland",
            "email": "joephoffland@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.5"
    },
    "suggest": {
        "jhoffland/guzzle-formatter": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10.0",
        "slevomat/coding-standard": "^8.6",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "scripts": {
        "run-tests":[
            "vendor/bin/phpcs",
            "vendor/bin/phpstan",
            "vendor/bin/phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
